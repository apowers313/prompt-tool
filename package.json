{
  "name": "pupt",
  "version": "1.2.0",
  "description": "Powerful Universal Prompt Tool - your faithful prompt companion",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pt": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "pretest": "npm run build",
    "check": "npm run lint && npm run build && npm run test:coverage",
    "test": "vitest run --no-coverage",
    "test:verbose": "vitest run --no-coverage --reporter=verbose",
    "test:ci": "vitest run --no-coverage --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "claude",
    "claude code",
    "prompt",
    "ai",
    "template",
    "handlebars"
  ],
  "author": "Adam Powers <apowers@ato.ms>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apowers313/prompt-tool"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "prompts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/command-exists": "^1.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.0.40",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.2.1",
    "@types/pino": "^7.0.4",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "3.1.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitest": "3.1.4"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.15",
    "@inquirer/prompts": "^7.8.1",
    "@inquirer/testing": "^2.1.49",
    "@inquirer/type": "^3.0.8",
    "@types/uuid": "^10.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.5.0",
    "command-exists": "^1.2.9",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "minimatch": "^10.0.3",
    "minisearch": "^7.1.2",
    "@homebridge/node-pty-prebuilt-multiarch": "^0.11.14",
    "ora": "^8.2.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "simple-git": "^3.28.0",
    "strip-ansi": "^7.1.0",
    "uuid": "^11.1.0",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  }
}

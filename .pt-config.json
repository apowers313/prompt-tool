{
  "promptDirs": [
    "./prompts"
  ],
  "historyDir": "./.pthistory",
  "annotationDir": "./.pthistory",
  "version": "3.0.0",
  "defaultCmd": "claude",
  "defaultCmdArgs": [
    "--permission-mode",
    "acceptEdits",
    "--verbose"
  ],
  "defaultCmdOptions": {
    "Continue with last context?": "--continue"
  },
  "autoReview": true,
  "autoRun": true,
  "gitPromptDir": ".git-prompts",
  "handlebarsExtensions": [],
  "outputCapture": {
    "enabled": true,
    "directory": "./.pthistory",
    "maxSizeMB": 10
  }
}
